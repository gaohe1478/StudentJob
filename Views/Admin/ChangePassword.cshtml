@{
    Layout = "adminHomeLayout";
}
<div class="row" id="page-login">
    <div class="col-xs-12 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">

        <div class="box">
            <div class="box-content">
                <div class="text-center">
                    <h3 class="page-header">管理员修改密码</h3>
                </div>
                <form asp-controller="Admin" asp-action="changePwd">
                    <div class="form-group">
                        <label class="control-label">密码</label>
                        <input name="DPassword" class="form-control" type="password">
                    </div>
                    <div class="form-group">
                        <label class="control-label">新密码</label>
                        <input name="NewDPassword" class="form-control" type="password">
                    </div>
                    <div class="form-group">
                        <label class="control-label">重复输入新密码</label>
                        <input name="NewDPassword1" class="form-control" type="password">
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">提交</button>
                    </div>
                    @ViewData["error"]
                </form>
            </div>
        </div>
    </div>
</div>
