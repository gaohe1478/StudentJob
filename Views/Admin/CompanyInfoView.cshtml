@{
    Layout = "adminHomeLayout";
    var Info = Model;
}
<table class="table table-striped table-bordered table-hover table-heading no-border-bottom">
    <thead>
        <tr>
            <th>公司信息页面</th>
        </tr>
    </thead>
    <tbody>
        <tr class="primary">
            <td><code>姓名</code>@Info.CName</td>
        </tr>
        <tr class="primary">
            <td><code>所属行业</code>@Info.CIndustry</td>
        </tr>
        <tr class="primary">
            <td><code>电话</code>@Info.CTel</td>
        </tr>
        <tr class="primary">
            <td><code>地址</code>@Info.CAddress</td>
        </tr>
        <tr class="primary">
            <td><code>规模</code>@Info.CSize</td>
        </tr>
        <tr class="primary">
            <td><code>备注</code>@Info.CRemark</td>
        </tr>
        <tr class="text-center">
            <td>
            @if (ViewData["status"].ToString().Equals("0"))
            {
                <button class="btn btn-warning" onclick="showitem('@Info.CId')" type="button">封禁</button>
            }
            else
            {
                <button class="btn btn-info" onclick="showitem('@Info.CId')" type="button">解封</button>
            }
                <button class="btn btn-danger" onclick="Deleteitem('@Info.CId')" type="button">删除</button>
                <button class="btn btn-primary" onclick="crecruititem('@Info.CId')" type="button">招聘信息</button>
            </td>
        </tr>
    </tbody>
</table>
@section MyScripts
    {
    <script type="text/javascript">
        function Deleteitem(CId)
        {
            if (confirm("确定要删除吗？"))
            {
                var url = '@Url.Action("DeleteCompany", "Admin")' + '?CId=' + encodeURI(CId);
                location.href = url;
            }
        }
        function showitem(CId)
        {
            var url = '@Url.Action("UpdateCStatus", "Admin")' + '?CId=' + encodeURI(CId);
            location.href = url;
        }
        function crecruititem(CId)
        {
            var url = '@Url.Action("CRecruitList", "Admin")' + '?CId=' + encodeURI(CId);
            location.href = url;
        }
    </script>
}